{
  "compilerOptions": {
    "noEmit": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "dom.iterable", "es2019", "es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "mocks/*": ["__mocks__/*"],
      "tests/*": ["__tests__/*"],
      "*": ["node_modules/*"]
    },
    "sourceMap": true,
    "target": "es6",
    "incremental": true,
    "removeComments": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "app/**/*",
    "__mocks__/**/*",
    "__tests__/**/*",
    "./initialize.ts"
  ],
  "compileOnSave": false
}
